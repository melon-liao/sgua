@page
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-12">連線數:<span id="onlineCount">?</span></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-3">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
            <div class="col-6">
                <input type="button" id="clearButton" value="Clear Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div id="messagesSpace" class="col-12" style="overflow-y: scroll;height: 350px">
            <ul id="messagesList"></ul>
        </div>
    </div>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js" asp-append-version="true"></script>